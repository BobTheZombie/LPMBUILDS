# LPM build script for libxcursor
NAME="libxcursor"
VERSION="1.2.1"
RELEASE="1"
ARCH="${ARCH:-x86_64}"
SUMMARY="X cursor management library"
URL="https://www.x.org/"
LICENSE="MIT"
SOURCE=("https://xorg.freedesktop.org/archive/individual/lib/libXcursor-${VERSION}.tar.xz")
CHECKSUMS=("46c143731610bafd2070159a844571b287ac26192537d047a39df06155492104")
REQUIRES=("glibc" "libx11" "libxfixes" "libxrender" "libxrandr" "xorgproto")
PROVIDES=("libxcursor")
CONFLICTS=()
OBSOLETES=()
RECOMMENDS=()
SUGGESTS=()

prepare() { set -euxo pipefail; cd "$SRCROOT"; }

build() {
  set -euxo pipefail
  cd "$SRCROOT"
  ./configure --prefix=/usr --sysconfdir=/etc --disable-static
  make -j"$(nproc)"
}

staging() {
  set -euxo pipefail
  cd "$SRCROOT"
  make DESTDIR="$pkgdir" install
}
