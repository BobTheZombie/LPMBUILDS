name = "dhcpcd"
version = "10.0.6"
summary = "DHCP client daemon"
url = "https://roy.marples.name/projects/dhcpcd"
release = "1"
arch = "x86_64"

requires = ['glibc']
provides = ['dhcpcd']
conflicts = []
obsoletes = []

prepare() { :; }
build() {
    ./configure --prefix=/usr --sbindir=/usr/bin --sysconfdir=/etc
    make -j"$(nproc)"
}
install() {
    make DESTDIR="$PKGDIR" install
    install -Dm644 dhcpcd.conf "$PKGDIR/etc/dhcpcd.conf" || true
}

