name = "lpm"
version = "0.1.0"
summary = "Linux Package Manager (LPM)"
url = "https://gitlab.com/ryzenos1/lpm"
release = "1"
arch = "x86_64"

requires = ['python', 'openssl', 'zstd', 'sqlite', 'tar', 'gnupg', 'curl', 'ca-certificates']
provides = ['lpm']
conflicts = []
obsoletes = []

prepare() { :; }
build() { ./configure --prefix=/usr || true; make -j"$(nproc)" || true; }
install() { make DESTDIR="$PKGDIR" install || true; }

